#!/usr/bin/env node

'use strict';

/*jshint -W030 */

var yargs = require('yargs');
var commands = require('../lib/commands');

yargs.usage('Proxify: Setup and configure a proxy on your FFOS device\n\n' +
           'Usage: $0 <command>')
     .demand(1)
     .command('enable', 'Configure and enable the proxy on a chosen device')
     .command('count', 'Disable the proxy on a chosen device')
     .command('add-certs', 'Add the certs to a chosen device');

  var argv = yargs.argv;
  var command = argv._[0];

if (command === 'enable') {
  yargs.reset()
    .usage('$0 enable')
    .argv;
  commands.enableProxy();
} else if (command === 'disable'){
  yargs.reset()
    .usage('$0 disable')
    .argv;
  commands.disableProxy();
} else if (command === 'add-certs'){
  yargs.reset()
    .usage('$0 add-certs')
    .argv;
  commands.addCerts();
} else {
  yargs.showHelp();
}
